#:import TodoListToolbar todolist_view.TodoListToolbar
#:import TodoItem todolist_view.TodoItem

<TodoListToolbar>:
    size_hint_y: None
    height: self.theme_cls.standard_increment
    padding: "5dp"
    spacing: "3dp"

    MDIconButton:
        id: button_1
        icon: "keyboard-backspace"
        pos_hint: {"center_y": .5}
        on_release: 
            app.root.transition.direction = 'right'
            app.root.current="ChatPage"

    MDLabel:
        text: "To Do List"
        pos_hint: {"center_y": .5}
        size_hint_x: None
        width: self.texture_size[0]
        text_size: None, None
        font_style: 'H6'

    Widget:

    MDIconButton:
        id: "create_todo"
        icon: "plus"
        pos_hint: {"center_y": .5}

<TodoItem>:

    MDBoxLayout:
        id: box_top
        spacing: "10dp"
        adaptive_height: True
        pos_hint: {"center_y": .5}

        canvas:
            Color:
                rgba: app.theme_cls.primary_light
            Rectangle:
                pos: self.pos
                size: self.size

        MDIconButton:
            icon: root.icon
            pos_hint: {"center_y": .5}

        MDLabel:
            text: root.name

<TodoListScreen>:
    
    BoxLayout:
        orientation: "vertical"

        TodoListToolbar:
            id: toolbar
            elevation: 10
            pos_hint: {"top": 1}

        # BoxLayout:
        #     size_hint_y: None
        #     height: "30dp"
        #     padding: ["10dp", "10dp"]

        ScrollView:

            MDList:
                id: item_warp

                TodoItem:
                    icon: "plus"
                    text: "Task 1"