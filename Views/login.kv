#:kivy 1.11.1
<LoginPage>:
    name: "login"
    username: username
    password: password

    FloatLayout:

        MDLabel:
            text:"Username: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.85}
            size_hint: 0.35, 0.15

        MDTextField:
            id: username
            text:"username"
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.85}
            size_hint: 0.4, 0.15

        MDLabel:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.65}
            size_hint: 0.35, 0.15

        MDTextField:
            id: password
            text:"password"
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.65}
            size_hint: 0.4, 0.15

        MDTextButton:
            pos_hint:{"x":0.2,"y":0.03}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Register"

        MDFillRoundFlatButton:
            pos_hint:{"x":0.2,"y":0.2}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Log in"
            

        
